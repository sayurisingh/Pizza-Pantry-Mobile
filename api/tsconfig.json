{
  "compilerOptions": {
    "target": "ES2020",                 // modern JS for Node
    "module": "commonjs",               // Node default
    "rootDir": "./src",                 // source files
    "outDir": "./dist",                 // compiled output
    "strict": true,                     // enable strict type checks
    "esModuleInterop": true,            // allows default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,               // skip type checking node_modules
    "noImplicitAny": true,              // optional, recommended
    "noUnusedLocals": true,             // optional, recommended
    "noUnusedParameters": true          // optional, recommended
  },
  "include": ["src"]
}
